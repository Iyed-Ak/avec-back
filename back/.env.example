# Configuration de base
NODE_ENV=development
PORT=3000

# Base de donn√©es MongoDB
MONGO_URI=mongodb://localhost:27017/ifc-formation

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars
JWT_EXPIRES_IN=24h

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_LOGIN_MAX=5
RATE_LIMIT_ADMIN_MAX=50
RATE_LIMIT_PUBLIC_MAX=200

# Logging Configuration
LOG_LEVEL=info
LOG_DIR=./logs

# Security Configuration
BCRYPT_ROUNDS=12
MAX_FILE_SIZE=10485760
CORS_ORIGIN=http://localhost:4200

# Monitoring Configuration
ALERT_FAILED_LOGINS_THRESHOLD=10
ALERT_SUSPICIOUS_ACTIVITIES_THRESHOLD=5
ALERT_RATE_LIMIT_HITS_THRESHOLD=20

# Webhook Configuration (optionnel)
WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
WEBHOOK_ENABLED=false

# Session Configuration
SESSION_SECRET=your-session-secret-change-this-in-production

# HTTPS Configuration (production)
HTTPS_ENABLED=false
SSL_CERT_PATH=
SSL_KEY_PATH=
